[flake8]
# Maximum line length - industry standard is 88-120
max-line-length = 120

# Exclude common directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    migrations,
    alembic

# Error codes to ignore
ignore =
    # W503: line break before binary operator (conflicts with black)
    W503,
    # W504: line break after binary operator
    W504

# Per-file ignores
per-file-ignores =
    # E402: module level import not at top of file - intentional in test setup
    tests/conftest.py:E402
    tests/test_yeast_viability.py:E402

# Show source code for each error
show-source = True

# Count the number of occurrences of each error/warning code
count = True

# Display statistics at the end
statistics = True
